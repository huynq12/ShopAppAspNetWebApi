@page "/register"
@{Layout=null;}
	<link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />

	<link type="text/css" rel="stylesheet" href="/css/login.css" />

    <div class="wrapper">
        <div class="logo">
            <img src="/wwwroot/img/new-pictures/logo-tab.jpg" alt="">
        </div>
        <div class="text-center mt-4 name">
            Electro
        </div>
        <form id="registerForm" class="p-3 mt-3">
            <div class="form-field d-flex align-items-center">
                <span class="far fa-user"></span>
                <input type="text" name="register-email" id="register-email" placeholder="Tên tài khoản">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input type="password" name="register-password" id="register-password" placeholder="Mật khẩu">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input type="password" name="register-password-confirm" id="register-password-confirm" placeholder="Nhập lại Mật khẩu">
            </div>
            <button type="submit" class="btn mt-3">Đăng ký</button>
        </form>
        <div class="text-center fs-6">
            <a href="#">Đã có tài khoản?</a> or <a href="/login">Đăng nhập</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
    crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
      <script type="text/javascript" src="/js/account.js"></script>


