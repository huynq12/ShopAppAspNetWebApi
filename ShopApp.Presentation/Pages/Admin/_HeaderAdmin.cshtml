<script>
  function btnLogout() {
		localStorage.removeItem('token');
		window.location = "/"
	}
  var token = localStorage.getItem('token');
  var buttonStr = ''
  if(token){
    buttonStr += '<li class="nav-item"><a type="button" class="nav-link text-dark" onclick="btnLogout()">Logout</a></li>'
  }
  $('#listButton').append(buttonStr)
</script>