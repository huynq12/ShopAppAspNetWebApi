@page "/admin/users"
@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">

@await Html.PartialAsync("_HeaderAdmin")


<div class="container">
    <table class="table table-bordered table-striped dt-responsive nowrap">
        <thead>
            <th>Email</th>
            <th>FullName</th>
            <th>Phone number</th>
            <th>Address</th>
            <th>Actions</th>
        </thead>
        <tbody id="listUser"> 

        </tbody>
    </table>
</div>

<div class="modal fade" id="user-orders" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Orders</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
            <Label>Email</Label>
            <input class="form-control" id="user-email" disabled/>
        </form>
        
        <table class="table table-bordered table-striped dt-responsive nowrap mt-3">
            <thead>
                <th>OrderId</th>
                <th>FullName</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Address</th>
                <th>Time</th>
                <th>Status</th>
                <th>Actions</th>
            </thead>
            <tbody id="listUserOrders">

            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        @* <button type="button" class="btn btn-primary">Save changes</button> *@
      </div>
    </div>
  </div>
</div>






<script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="/admin/users.js"></script>